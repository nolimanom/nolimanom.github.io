{
  "version": 2,
  "name": "nolimanom.is-a-good.dev",
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/index", "dest": "/index.html" },
    { "src": "/bio", "dest": "/bio.html" },
    { "src": "/telegram", "dest": "/telegram.html" }
  ],
  "static": {
    "headers": [
      {
        "source": "**/*.html",
        "headers": [
          { "key": "Cache-Control", "value": "max-age=0, must-revalidate" }
        ]
      }
    ]
  }
}
